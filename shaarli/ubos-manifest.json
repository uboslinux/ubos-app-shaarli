{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/shaarli",
            "depends" : [
                "php",
                "php-apache",
                "php-gd",
                "perl-digest-sha1",
                "smtp-server"
            ],
            "apache2modules" : [
                "php7",
                "rewrite"
            ],
            "phpmodules" : [
                "gd",
            ],
            "appconfigitems" : [
                {
                    "type" : "directorytree",
                    "names" : [
                        "application",
                        "assets",
                        "doc",
                        "inc",
                        "index.php",
                        "plugins",
                        "shaarli_version.php",
                        "tpl",
                        "vendor"
                    ],
                    "source" : "web/$1"
                },
                {
                    "type" : "directory",
                    "names" : [
                        "cache",
                        "pagecache",
                        "tmp"
                    ],
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}",
                    "dirpermissions"  : "755",
                    "filepermissions" : "644"
                },
                {
                    "type" : "directory",
                    "name" : "data",
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}",
                    "dirpermissions"  : "755",
                    "filepermissions" : "644"
                },
                {
                    "type"   : "file",
                    "name"   : "data/datastore.php",
                    "source" : "tmpl/datastore.php.tmpl",
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}",
                    "retentionbucket" : "datastore",
                    "retentionpolicy" : "keep"
                },
                {
                    "type" : "file",
                    "names" : [
                        "cache/.htaccess",
                        "data/.htaccess"
                    ],
                    "source" : "tmpl/deny-htaccess"
                },
                {
                    "type" : "perlscript",
                    "source" : "bin/generate-config.pl"
                },
                {
                    "type" : "perlscript",
                    "source" : "bin/fix-permissions.pl"
                },
                {
                    "type" : "systemd-service",
                    "name" : "smtp-server@${appconfig.appconfigid}"
                }
            ]
        }
    },
    "customizationpoints" : {
        "title" : {
            "type"        : "string",
            "required"    : false,
            "default" : {
                "value" : "My links"
            }
        },
        "timezone" : {
            "type"        : "string",
            "required"    : false,
            "default" : {
                "value" : "UTC"
            }
        },
        "salt" : {
            "type"        : "string",
            "required"    : false,
            "private"     : true,
            "internal"    : true,
            "default" : {
                "expression" : "${randomHex(40)}"
            }
        },
    }
}
